{
	"name":             "pattern-lab/patternengine-ext-twig",
	"description":      "Twig-based PatternEngine for Pattern Lab.",
	"keywords":         ["twig", "pattern lab", "pattern engine"],
	"homepage":         "http://patternlab.io",
	"license":          "MIT",
	"type":             "patternlab-patternengine",
	"authors": [
		{
			"name":         "Dave Olsen",
			"email":        "dmolsen@gmail.com",
			"homepage":     "http://dmolsen.com",
			"role":         "Lead Developer"
    },
    {
			"name":         "Erik Seifert",
			"email":        "erik.seifert@b-conenct.de",
			"homepage":     "http://www.b-connect.de",
			"role":         "Lead Developer"
		}
	],
	"support": {
		"issues":         "https://github.com/pattern-lab/patternengine-php-ext-twig/issues",
		"wiki":           "http://patternlab.io/docs/",
		"source":         "https://github.com/pattern-lab/patternengine-php-ext-twig/releases"
	},
	"autoload": {
		"psr-0": {
			"PatternLab\\PatternEngine\\Twig": "src/"
		}
	},
	"require": {
		"pattern-lab/core": "^2.0.0",
    "twig/twig":        "~1.0",
    "phpdocumentor/reflection-docblock": "~4.3.0"
	},
	"extra": {
		"patternlab": {
			"config": {
				"lineageMatch": "{%([ ]+)?(?:include|extends|embed)( |\\()[&quot;\\&#039;]([\\/.@A-Za-z0-9-_]+)[&quot;\\&#039;]([\\s\\S+]*?)%}",
				"lineageMatchKey": 3,
				"patternExtension": "twig",
				"twigDebug": false,
				"twigAutoescape": "html",
				"twigDefaultDateFormat": "",
				"twigDefaultIntervalFormat": "",
				"twigMacroExt": "macro.twig",
				"twigFilterExt": "filter.php",
				"twigFunctionExt": "function.php",
				"twigTagExt": "tag.php",
				"twigTestExt": "test.php"
			}
		}
	}
}
